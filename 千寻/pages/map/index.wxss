.map-button {
  display: flex;
  flex-direction: column;
  align-items: center;
  position: fixed;
  margin-left: 580rpx;
}
.map-button .user-point {
  display: flex;
  flex-direction: row;
}
.map-button .user-point .point-icon {
  width: 60rpx;
  margin-top: 5rpx;
}
.map-button .user-point .point-num {
  margin-top: 10rpx;
  font-size: 30rpx;
  font-weight: 500;
  background-color: white;
  border-radius: 15rpx;
  width: 100rpx;
  height: 45rpx;
  text-align: center;
  padding-top: 10rpx;
}
.map-button .ranking {
  margin-left: 80rpx;
}
.map-button .ranking .ranking-icon {
  width: 70rpx;
}
.map-button .mission {
  margin-left: 80rpx;
}
.map-button .mission .mission-icon {
  width: 70rpx;
}
