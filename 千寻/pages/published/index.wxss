.first_tab .goods_item_hide {
  display: flex;
  border-bottom: 3px solid #d8d5d5;
  background-color: #eee;
}
.first_tab .goods_item_hide .goods_img_wrap {
  flex: 2;
  display: flex;
  justify-content: center;
  align-items: center;
}
.first_tab .goods_item_hide .goods_img_wrap image {
  width: 300rpx;
  height: 300rpx;
  border-radius: 15rpx;
  -webkit-filter: grayscale(1);
  filter: gray;
  filter: grayscale(1);
}
.first_tab .goods_item_hide .goods_info_wrap {
  flex: 3;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}
.first_tab .goods_item_hide .goods_info_wrap .goods_name .goods_name_c {
  display: -webkit-box;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}
.first_tab .goods_item_hide .goods_info_wrap .goods_price {
  color: #c4bebe;
  font-size: 32rpx;
  font-weight: 650;
}
.first_tab .goods_item_hide .goods_info_wrap .buttons {
  display: flex;
}
